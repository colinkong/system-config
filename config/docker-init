#!/bin/bash
#
# Docker container init script
#

if [ ! -d "$HOME" ]
then
    tar xf /home/home.tar -C ${HOME%/*}
    mv ${HOME%/*}/root "$HOME"
fi
rm -f /home/home.tar

if [ "$XAUTH" ]
then
    touch $HOME/.Xauthority
    xauth add $(uname -n)/${XAUTH#*/}
fi

if [ $# = 0 ]
then
    exec bash -l
fi
exec "$@"
