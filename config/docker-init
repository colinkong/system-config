#!/bin/sh
#
# Docker container init script
#

# Change Docker's "owner" user ID
if [ "$UID" -a "$UID" != 0 ]; then
    sed -i "s/owner:x:1000:/owner:x:$UID:/" /etc/passwd
    chown -R $UID:100 /home/owner
fi

# Run using docker user account
if [ $# != 0 ]; then
    sudo -u owner "$@"
else
    sudo -u owner bash -l
fi
