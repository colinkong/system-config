" General settings
set background=dark
set encoding=utf-8
set scrolloff=3
set title
let &titlestring=hostname().':%F  %y%r%m %a'

" Spell Checking
set spell spelllang=en_gb
set spellcapcheck=
highlight clear SpellBad
highlight SpellBad cterm=underline
highlight clear SpellCap
highlight SpellCap cterm=underline
highlight clear SpellLocal
highlight SpellLocal cterm=underline
highlight clear SpellRare
highlight SpellRare cterm=underline
nmap . ]s  " Next
nmap > ]s  " Next
nmap r z=  " Replace word
nmap = z=  " Replace word
nmap * z=  " Replace word
nmap + zg  " Good word
nmap - zug  " Undo good word

" Status line
set ruler
set showcmd

" Syntax highlighting
syntax on
set hlsearch
set list listchars=tab:▸\ ,
set showmatch
set tabstop=4
highlight OverLength ctermbg=0 guibg=lightgrey
match OverLength /\%101v.\+/
highlight TrailingSpace ctermbg=0 guibg=lightgrey
2match TrailingSpace /\s\+$/
autocmd BufWritePre * %s/▸\   /	/ge

" Turn off annoying features
set lazyredraw
set nobackup
set noerrorbells
set noswapfile
set novisualbell

" Workaround cursor bugs (ie Tmux)
nmap <Esc>[A <Up>
nmap <Esc>[B <Down>
nmap <Esc>[C <Right>
nmap <Esc>[D <Left>
cmap <Esc>[A <Up>
cmap <Esc>[B <Down>
cmap <Esc>[C <Right>
cmap <Esc>[D <Left>
imap <Esc>[A <Up>
imap <Esc>[B <Down>
imap <Esc>[C <Right>
imap <Esc>[D <Left>

" Python settings
autocmd Filetype python call SetPython()
function SetPython()
    match OverLength /\%80v.\+/
endfunction
