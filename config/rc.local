#!/bin/bash -u

export PATH="/opt/software/bin:$PATH"
export PYTHONDONTWRITEBYTECODE=1

ntpdate -u > /dev/null 2>&1 < /dev/null &
xlight -reset &
(rmdir /media/*/* /media/* && rm /media/*) &

# Restore corrupt grub.cfg
if [ "`diff /boot/grub/grub.cfg /boot/grub/grub.cfg-ok`" ]
then
    cp -p /boot/grub/grub.cfg-ok /boot/grub/grub.cfg
fi

# Fix VPN client incorrect termination
if [ -f /run/resolvconf/resolv.conf ]
then
    ln -sf /run/resolvconf/resolv.conf /etc/resolv.conf
fi

if [ -f /etc/rc.local-opt ]
then
    . /etc/rc.local-opt
fi

exit 0
