FROM drtuxwang/debian:9

# Install extra packages
RUN apt-get install --no-install-recommends -y \
		csh \
		file \
		python3 \
		python3-dev \
		python3-pip \
		python3-setuptools \
		sudo \
		tcsh \
		tmux \
		wget && \
	apt-get install --no-install-recommends -y ksh ||: && \
	python3 -m pip install pep8 pylint && \
	apt-get clean
