{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "ubuntu-rc",
        "namespace": "default",
        "labels": {
            "app": "ubuntu-lxc"
        }
    },
    "spec": {
        "replicas": 2,
        "selector": {
            "app": "ubuntu-lxc"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "ubuntu-lxc"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "ubuntu-lxc",
                        "image": "ubuntu:16.04",
                        "imagePullPolicy": "Always",
                        "command": [
                            "sleep",
                            "86400"
                        ],
                        "env": [
                            {
                                "name": "NAME",
                                "value": "VALUE"
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 80,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "requests": {
                                "cpu": "100m",
                                "memory": "64M"
                            },
                            "limits": {
                                "cpu": "1000m",
                                "memory": "1024M"
                            }
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/shared",
                                "name": "shared"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "shared",
                        "hostPath": {
                            "path": "/shared"
                        }
                    }
                ],
                "nodeSelector": {
                    "kubernetes.io/hostname": "test01"
                }
            }
        }
    }
}
