{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "ubuntu-pod",
        "namespace": "default",
        "labels": {
            "app": "ubuntu-lxc"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "ubuntu-lxc",
                "image": "ubuntu:16.04",
                "imagePullPolicy": "IfNotPresent",
                "command": [
                    "bash"
                ],
                "env": [
                    {
                        "name": "NAME",
                        "value": "VALUE"
                    }
                ],
                "ports": [
                    {
                        "containerPort": 80,
                        "protocol": "TCP"
                    }
                ],
                "resources": {
                    "requests": {
                        "cpu": "100m",
                        "memory": "64M"
                    },
                    "limits": {
                        "cpu": "1000m",
                        "memory": "1024M"
                    }
                },
                "volumeMounts": [
                    {
                        "mountPath": "/shared",
                        "name": "shared"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "shared",
                "hostPath": {
                    "path": "/shared"
                }
            }
        ],
        "restartPolicy": "Never"
    }
}
