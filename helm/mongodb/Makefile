NAME := mongodb-server
VERSION := 6.1.5

# Default namespace
ifndef NAMESPACE
	NAMESPACE=default
endif


default: status

.PHONY: check
check:
	helm upgrade \
		--install \
		--dry-run \
		--debug \
		--namespace=$(NAMESPACE) \
		--values values.yaml \
		--set fullnameOverride=$(NAME) \
		--version $(VERSION) \
		$(NAMESPACE)-$(NAME) stable/mongodb

.PHONY: deploy
deploy:
	helm upgrade \
		--install \
		--wait \
		--namespace=$(NAMESPACE) \
		--values values.yaml \
		--set fullnameOverride=$(NAME) \
		--version $(VERSION) \
		$(NAMESPACE)-$(NAME) stable/mongodb

.PHONY: status
status:
	@echo "\n*** Checking status ***"
	helm status $(NAMESPACE)-$(NAME)

.PHONY: connect
connect:
	@echo "\n*** Connecting to Mongodb database ***"
	@echo "Addresss = `kubectl --namespace=$(NAMESPACE) get service mongodb-server | awk 'NR==2 {print $$3}'`"
	@robo3t

.PHONY: version
version:
	@helm search -l stable/mongodb | grep "stable/mongodb[	 ]*$(VERSION)"

.PHONY: clean
clean:
	helm ls
	helm del --purge $(NAMESPACE)-$(NAME) ||:
