#!/bin/sh
#
# Wrapper for generic Python 3.x program (change "-" to "_" and prefix underscore)
#

BIN_DIR=`dirname "$0"`
PY_MAIN="-pyldname=`basename \"$0\"` _`basename \"$0\" | sed -e \"s/-/_/g\"`"

if [ -x "$BIN_DIR/python3" ]; then
    exec "$BIN_DIR/python3" -B "$BIN_DIR/pyld.py" $PY_MAIN "$@"
else
    exec "$BIN_DIR/pyld.py" $PY_MAIN "$@"
fi
