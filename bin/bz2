#!/bin/sh
#
# Wrapper for generic Python 3.x program (change "-" to "_" and prefix underscore)
#

BIN_DIR=`dirname "$0"`
PYTHON="$BIN_DIR/python3"
if [ ! -x "$PYTHON" ]; then
    PYTHON="python3"
fi
PY_MAIN="-pyldname=`basename \"$0\"` `basename \"$0\" | sed -e \"s/-/_/g\"`_"

exec "$PYTHON" -B -E "$BIN_DIR/pyld.py" $PY_MAIN "$@"
