#!/bin/bash -u
#
# Run Docker sandbox for Python 3 (no dri, ipc, net, snd, root & x11 defaults)
#

# Locate GIT
if [ -f "$(readlink -m "$0"/../..)/docker/Makefile" ]
then
    DIR="$(readlink -m "$0"/../..)"
elif [ -f "$HOME/git/system-config/docker/Makefile" ]
then
    DIR="$HOME/git/system-config"
else
    echo "Error: Cannot locate \"git/system-config/docker/Makefile\""
    exit 1
fi

export FLAGS="--network=none"
export DIST=
SANDBOX=99999:99999
while [ $# -gt 0 ]
do
    case $1 in
    -dist=*)
        DIST=${1#*=}
        ;;
    -dri)
        FLAGS="$FLAGS --device=/dev/dri:/dev/dri"
        ;;
    -ipc)
        FLAGS="$FLAGS --ipc=host"
        ;;
    -net)
        FLAGS="$FLAGS --network=bridge"
        ;;
    -root)
        SANDBOX="0:0"
        ;;
    -snd)
        FLAGS="$FLAGS --device=/dev/snd:/dev/snd"
        ;;
    -user)
        SANDBOX="$(id -u):$(id -g)"
        ;;
    -v=*)
        MOUNT=${1#*=}
        FLAGS="$FLAGS --volume=${MOUNT%:ro}:$MOUNT"
        ;;
    -x11)
        FLAGS="$FLAGS --volume=/tmp/.X11-unix:/tmp/.X11-unix --env DISPLAY=$DISPLAY --env XAUTH=\"$(xauth list $DISPLAY)\""
        ;;
    -*)
        echo "usage: $0 [-dist=<name>] [-dri] [-net] [-root] [-snd] [-user] [-v=<path>[:ro]] [-x11] [command]"
        echo
        echo "optional arguments:"
        ls -1d $DIR/docker/*/sandbox-python/Makefile 2> /dev/null | \
            sed -e "s@.*/docker/@@;s@/.*@@" | \
            awk '{printf("   -dist=%-15s Select sandbox environment.\n", $1)}'
        echo "   -dri                  Enable direct rendering device access."
        echo "   -ipc                  Enable shmem for internet process communications."
        echo "   -net                  Enable network device access."
        echo "   -root                 Run as root user (Default sandbox user)."
        echo "   -snd                  Enable sound device access."
        echo "   -user                 Run as host user & group (Default sandbox user)."
        echo "   -v=<path>[:ro]        Bind mount a volume (ie \"-v=/path\" & \"-v=/path:ro\")"
        echo "   -x11                  Enable X11 display access."
        exit 1
        ;;
    *)
        break
        ;;
    esac
    shift
done

# Share current working directory
FLAGS="$FLAGS --volume=$PWD:/vol/app --workdir=/vol/app"

# Sandbox user
if [ "$SANDBOX" = "99999:99999" ]
then
    FLAGS="$FLAGS --user=$SANDBOX"
elif [ "$SANDBOX" != "0:0" ]
then
    FLAGS="$FLAGS --volume=/etc/passwd:/etc/passwd:ro --volume=/etc/group:/etc/group:ro --user=$SANDBOX"
fi

export COMMAND="$@"

if [ "$DIST" -a ! -f "$DIR/docker/${DIST}/sandbox-python/Makefile" ]
then
     echo "Error: Cannot locate \"$DIR/docker/${DIST}/sandbox-python/Makefile\""
     exit 1
fi

exec make --quiet -C $DIR/docker run-python
