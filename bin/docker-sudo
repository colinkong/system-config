#!/bin/bash

export FLAGS=
for FILE in .bashrc .profile .vimrc
do
    if [ -f "$HOME/$FILE" ]
    then
        FLAGS="$FLAGS--volume=$HOME/$FILE:/root/$FILE:ro "
    fi
done
export FLAGS="$FLAGS--workdir $PWD"

export COMMAND="$@"

for FILE in ${0%/bin/docker-wine}/docker/Makefile $HOME/git/system-config/docker/Makefile
do
    if [ -f "$FILE" ]
    then
        exec make --quiet -C ${FILE%/*} run-sudo
    fi
done
echo "Error: Cannot locate \"git/system-config/docker/Makefile\""
exit 1
