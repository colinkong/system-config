#!/usr/bin/env bash
#
# Wrapper for "tar" command
#


#
# Function to return location of program
#
which() {
    if [ "$1" = "${0##*/}" ]
    then
        PATH=$(echo ":$PATH:" | sed -e "s@.*:${0%/*}:@@")
    fi

    for CDIR in $(echo $PATH | sed -e "s/ /%20/g;s/:/ /g")
    do
        CMD=$(echo "$CDIR/$1" | sed -e "s/%20/ /g")
        if [ -x "$CMD" -a ! -d "$CMD" ]
        then
            echo "$CMD" | sed -e "s@//*@/@g"; return
        fi
    done
}


#
# Function to run Python version of tar
#
pytar() {
    BIN_DIR=${0%/*}
    PYTHON="$BIN_DIR/python3"
    if [ ! -x "$PYTHON" ]
    then
        PYTHON="python3"
    fi
    PY_MAIN=${0##*/}

    exec "$PYTHON" -B -E "$BIN_DIR/pyld.py" $PY_MAIN "$@"
}


case $1 in
*[./]*)
    pytar "$@";;
*)
    if [ -d "$1" ]
    then
        pytar "$@"
    else
        case $(uname) in
        *NT*)
            TAR="tar.exe"
            ;;
        *)
            TAR=$(which tar)
            ;;
        esac
    fi
esac

if [ ! "$TAR" ]
then
    echo "***ERROR*** Cannot find required \"tar\" software." 1>&2
    exit 1
fi

exec $TAR "$@"
