{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "debian-lxc",
        "namespace": "ckong",
        "labels": {
            "app": "debian-lxc"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "app": "debian-lxc"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "debian-lxc"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "debian-lxc",
                        "image": "debian:8",
                        "imagePullPolicy": "IfNotPresent",
                        "args": [
                            "sleep",
                            "86400"
                        ],
                        "env": [
                            {
                                "name": "NAME",
                                "value": "VALUE"
                            }
                        ],
                        "ports": [
                            {
                                "containerPort": 80,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "1440",
                                "memory": "1024M"
                            },
                            "requests": {
                                "cpu": "60m",
                                "memory": "128M"
                            }
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/shared",
                                "name": "shared"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "shared",
                        "hostPath": {
                            "path": "/shared"
                        }
                    }
                ]
            }
        }
    }
}
